<html>
  <head>
<title> Search Directory</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
  <body>
      <div class="container" style="max-width:1000px;">
<form method="POST" action="/search/">
<br><br>
  <div class="form-group">
    <label for="inputState">Enter category you want to search :</label>
    <select name="category" class="form-control">
      <option selected>title</option>
      <option >actor1</option>
      <option >actor2</option>
      <option >actor3</option>
      <option >production</option>
      <option >locations</option>
    </select>
  </div>

  <div class="form-group">
      <label >Search parameter :</label>
      <input type="text" name="search_query" class="form-control" >
  </div>
  <button type="submit" class="btn btn-success">Search</button>
 </form>

    <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Actor</th>
            <th>Actor</th>
            <th>Actor</th>
            <th>Location</th>
            <th>Release Year</th>
            <th>Production House</th>
            <th>Latitute</th>
            <th>Longitude</th>
          </tr>
        </thead>
        <tbody>
            <% if(results.length>0){%>
              <% results.forEach(function (result){%>
            <tr class="info">
              <td><%= result.title %></td>
              <td><%= result.actor1 %></td>
              <td><%= result.actor2%></td>
              <td><%= result.actor3 %></td>
              <td><%= result.locations %></td>
              <td><%= result.release %></td>
              <td><%= result.production %></td>
              <td><%= result.lat %></td>
              <td><%= result.long %></td>

            </tr>
            <%})%>
        <% } else { %>
          <tr class="danger">
        <td >No data found</td></tr>
          <% } %>
        </tbody>
        </table>

</div>
  </body>
</html>
